<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h1><%= @question.test.title %> <%= t('.header') %></h1>

    <div class="mb-3">
      <%= @question.body %>
    </div>

    <h2><%= t('.answers') %>:</h2>
    <ol>
      <%= render partial: 'answers/answer', collection: @question.answers %>
    </ol>

    <div class="mb-3">
      <%= link_to t('helpers.submit.answer.new'), new_admin_question_answer_path(@question), class: 'btn btn-outline-primary' %>
    </div>

    <%= link_to t('helpers.edit'), edit_admin_question_path(@question), class: 'btn btn-primary' %> 
    <%= link_to t('helpers.page'), admin_test_path(@question.test), class: 'btn btn-success' %> 
  </div>
</div>
