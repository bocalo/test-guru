<tr>
  <td class="align-middle"><%= badge.title %></td>
  <td class="align-middle"><%= badge.badge_type %></td>
  <td class="align-middle"><%= badge.badge_value %></td>
  <td class="align-middle"><%= octicon badge.image_url %></td>
  <td class="align-middle"><%= link_to t('helpers.show'), admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('helpers.edit'), edit_admin_badge_path(badge) %></td>
  <td class="align-middle">
    <%= link_to t('helpers.delete'),
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: t('helpers.sure') } 
    %>
  </td>
</tr>
