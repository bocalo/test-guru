<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <p class="mt-3">
      <strong><%= t('.title') %>:</strong>
      <%= @test.title %>
    </p>
    <p class="mt-3">
      <strong><%= t('.level') %>:</strong>
      <%= @test.level %>
    </p>
    <div class="mt-3">
      <strong><%= t('.questions') %>:</strong>
    
      <%= link_to t('helpers.submit.test.new_question'), new_admin_test_question_path(@test) %>
      <ol>
        <%= render partial: 'questions/question', collection: @test.questions %>
      </ol>
    </div><br>
    <div class="mt-3">
      <%= link_to t('helpers.edit'), edit_admin_test_path(@test), class: 'btn btn-outline-success' %> 
      <%= link_to t('helpers.page'), admin_tests_path, class: 'btn btn-outline-primary' %>
    </div>
  </div> 
</div> 





 