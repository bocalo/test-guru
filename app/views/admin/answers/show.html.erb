<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h1><%= t('.header') %></h1>
    <p><%= @answer.question.body %></p>
    <p>
      <b><%= t('.answer') %>:</b>
      <%= @answer.body %>
    </p>
    <p>
      <b><%= t('.correct') %>:</b>
      <%= @answer.correct %>
    </p>

    <%= link_to t('helpers.page'), admin_question_path(@answer.question), class: 'btn btn-outline-primary' %> 
    <%= link_to t('helpers.edit'), edit_admin_answer_path(@answer), class: 'btn btn-outline-success' %> 
  </div>
</div>

