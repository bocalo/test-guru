<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>
  <div class="mb-3">
    <%= form.label :body, class: 'form-label' %><br>
    <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60 %> 
  </div>
  
  <div class="mb-3"> 
     <%= form.label :correct, class: 'form-check-label' %> 
     <%= form.check_box :correct, id: :answer_correct, class: 'form-check-input' %>
  </div> 
  
  <%= form.submit class: 'btn btn-outline-primary' %>
  
<% end %>
